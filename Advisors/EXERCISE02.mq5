//| Expert initialization function                                   |
//+------------------------------------------------------------------+
int OnInit()
  {
//--- create timer
   EventSetTimer(60);
   
   
   RadiusSq  = MathPow(Radius, 2);
   
//---
   return(INIT_SUCCEEDED);
  }
